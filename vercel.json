{
  "version": 2,
  "builds": [
    { "src": "package.json",       "use": "@vercel/static-build", "config": { "distDir": "dist/public", "buildCommand": "npm run vercel-build" } },
    { "src": "dist/index.cjs",     "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/(.*\\.(?:js|css|png|jpg|jpeg|svg|ico|json|webp))$", "dest": "/dist/public/$1" },
    { "src": "/(.*)",               "dest": "/dist/index.cjs" }
  ]
}

